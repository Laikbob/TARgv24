<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TARgv24_Tund_1.Lumememm"
             Title="Lumememm"
             BackgroundImageSource="snow.jpg">
    

    <VerticalStackLayout Padding="10" Spacing="15">

        <Label Text="Lumememm!"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               FontSize="24"
               TextColor="DarkBlue"/>

        <AbsoluteLayout x:Name="snowmanLayout"
                        HeightRequest="300"/>
        
        <!-- Кнопки -->
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="15">
            <Button x:Name="buNäita"
                    Text="Näita"
                    WidthRequest="100"
                    Clicked="buNäita_Clicked"/>
            <Button x:Name="buPeida"
                    Text="Peida"
                    WidthRequest="100"
                    Clicked="buPeida_Clicked"/>
            <Button x:Name="buVärv"
                    Text="Muuda värvi"
                    WidthRequest="120"
                    Clicked="buVärv_Clicked"/>
            <Button x:Name="buTantsi"
                    Text="Tantsi"
                    WidthRequest="100"
                    Clicked="buTantsi_Clicked"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>
